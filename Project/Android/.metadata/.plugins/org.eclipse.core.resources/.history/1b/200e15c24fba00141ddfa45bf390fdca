			}

			@Override
			public void onPullUpToRefresh(PullToRefreshBase<GridView> refreshView) {
				if(mIsAllClubsLoaded)
 				{
 					Toast.makeText(ClubsActivity.this, "No more clubs!", Toast.LENGTH_SHORT).show();
